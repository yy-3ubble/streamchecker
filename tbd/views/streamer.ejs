<!doctype html>
<html lang="ja">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>tbd</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.0/font/bootstrap-icons.min.css" integrity="sha384-i+xy8lASOql6ZKgHS55ihhlnOHCHfZyJhyeAYmMFddar7eOJBltkmB/dqgZSch71" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%
        const finishedTime = (finishedAt) => {
            const finish = new Date(finishedAt);
            return finish;
        };
    %>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <table class="table">
                    <thead class="table-light">
                        <tr>
                            <th></th>
                            <th>LIVE CHANNEL</th>
                            <th>TWITTER</th>
                            <th>FINISHED AT</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% for (let i = 0; i < items.length; i++) { %>
                        <tr>
                            <td><span><%= items[i].name %></span></td>
                        <% if (items[i].service === 'YouTube') { %>
                            <td>
                                <a href="https://www.youtube.com/channel/<%= items[i].channel_id %>">
                                    <i class="bi-youtube" style="color: #c4302b;"></i>
                                </a>
                            </td>
                        <% } %>
                        <% if (items[i].service === 'Twitch') { %>
                            <td>
                                <a href="https://www.twitch.tv/<%= items[i].channel_id %>">
                                    <i class="bi-twitch" style="color: #6441a5;"></i>
                                </a>
                            </td>
                        <% } %>
                            <td>
                                <a href="https://twitter.com/<%= items[i].twitter_id %>">
                                    <i class="bi-twitter" style="color: #00acee;"></i>
                                </a>
                            </td>
                            <td>
                            <% if (items[i].finished_at === null) { %>
                            <% } %>
                            <% if (items[i].finished_at) { %>
                                <%= finishedTime(items[i].finished_at) %>
                            <% } %>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>